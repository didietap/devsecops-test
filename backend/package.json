{
  "name": "devsecops-backend",
  "version": "0.1.0",
  "description": "Secure NestJS backend skeleton for DevSecOps test (health, metrics, APM)",
  "author": "Didiet A. Pambudiono",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "start:prod": "node dist/main.js",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/main.ts",
    "lint": "eslint '{src,test}/**/*.ts' --fix"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "express": "^4.18.2",
    "prom-client": "^14.0.0",
    "helmet": "^7.0.0",
    "elastic-apm-node": "^3.28.0",
    "pino": "^8.0.0",
    "pino-http": "^8.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.0",
    "rimraf": "^5.0.0",
    "tsconfig-paths": "^4.2.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0"
  }
}
